{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/api/*"]
    },
    "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/admin",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/*",
      "headers": {
        "permissions-policy": "geolocation=(self), microphone=(), camera=(), fullscreen=(self), payment=()",
        "strict-transport-security": "max-age=31536000; includeSubDomains; preload",
        "x-frame-options": "DENY",
        "content-security-policy": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; font-src 'self'; object-src 'none';"
      }
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  }
}